<main class="content-main login-form">
  <div class="text-center">
    <h1>Log in</h1>
  </div>
  <div class="form">
    <%= form_for(:session, url: login_path) do |f| %>

    <div class="form-group">
      <%= f.label :email, 'Email' %>
      <%= f.email_field :email, class: 'form-control', value: 'guest1@example.com' %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Password' %>
      <%= f.password_field :password, class: "form-control", value: 'guest' %>
    </div>

    <%= f.submit 'ゲストとしてログイン', class: "btn btn-primary btn-block" %>
    <% end %>

    <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
  </div>
</main>
