<% diaries.each do |diary| %>
  <article class="post">
    <div class="post-wrapper clearfix">
      <section class="post">
        <div class="post-content">
          <div class="body-text">
            <p class="date"><%= diary.get_date %></p>
            <p><%= diary.content %></p>
          </div>
          <section class="conditions">
              <div class="condition-wrapper">
                <div class="condition-title">活動量</div>
                <ul class="list-group list-group-horizontal">
                  <li class="list-group-item">-2</li>
                  <li class="list-group-item">-1</li>
                  <li class="list-group-item list-group-item-info">0</li>
                  <li class="list-group-item">+1</li>
                  <li class="list-group-item">+2</li>
                </ul>
              </div>
              <div class="condition-wrapper">
                <div class="condition-title">気分　</div>
                <ul class="list-group list-group-horizontal">
                  <li class="list-group-item list-group-item-info">-2</li>
                  <li class="list-group-item">-1</li>
                  <li class="list-group-item">0</li>
                  <li class="list-group-item">+1</li>
                  <li class="list-group-item">+2</li>
                </ul>
              </div>
              <div class="condition-wrapper">
                <div class="condition-title">食欲　</div>
                <ul class="list-group list-group-horizontal">
                  <li class="list-group-item">-2</li>
                  <li class="list-group-item">-1</li>
                  <li class="list-group-item list-group-item-info">0</li>
                  <li class="list-group-item">+1</li>
                  <li class="list-group-item">+2</li>
                </ul>
              </div>
          </section>
        </div>
      </section>
    </div>
  </article>
<% end %>
