<main class="content-main">
  <section class="content-section">
    <section class="basesection">
      <div class="basesection-header">
        <div class="sectiontitle">
          <div class="sectiontitle-caption">
            <p>日記を書く</p>
          </div>
        </div>
      </div>
      <div id="diary_record_area" class="basesection-card basesection-contents">
        <%= form_with model: @diary, html: { style: "width: 100%; padding: 0 10px;"} do |form| %>
          <% if @diary.errors.any? %>
            <div class="alert alert-warning">
              <ul>
                <% @diary.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= render "layouts/form", form: form %>
        <% end %>
      </div>
    </section>
  </section>
</main>
